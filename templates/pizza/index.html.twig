{% extends 'base.html.twig' %}

{% block title %}Hello PizzaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    <a href="{{ path('create') }}">Create a pizza</a>
    <a href="{{ path('ingredients') }}">Create a ingredients</a>

   <h2> Select your pizza!:</h2>
    {% for pizza in pizzas %}
  <p>  {{ pizza.name }}</p>
    <ul>

    {% for ingredient in pizza.pizzas %}
            {% if(ingredient.type == 0) %}
                <li>Sauce: {{ ingredient.name }}</li>

            {% else%}

            <li>Topping: {{ ingredient.name }}</li>

                {% endif%}

    {% endfor  %}

    {% endfor  %}
            </ul>


</div>
{% endblock %}
