{% extends 'base.html.twig' %}

{% block title %}Hello PizzaController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Create a pizza</h1>

        <form action="" method="post">
            <p>Select your sauce</p>
            <select>
                <option value="tomato">Tomato sauce</option>
                <option value="ananas">Cheese sauce</option>
                <option value="ananas">no sauce</option>
            </select>
            <p>Select your toppings:</p>
            <select>
                <option value="chicken">chicken</option>
                <option value="ham">ham</option>
            </select>
            <select>
                <option value="ananas">ananas</option>
                <option value="salami">salami</option>
            </select>
            <br>

            <button type="submit"> Create a pizza </button>
        </form>


    </div>
{% endblock %}
